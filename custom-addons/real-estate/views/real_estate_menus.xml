<odoo>

    <!-- Root Menu -->
    <menuitem id="real_estate_root_menu"
              name="Real Estate">

        <!-- Projects Submenu -->
        <menuitem id="real_estate_projects_menu"
                  name="Project">
            <menuitem id="real_estate_project_list_menu"
                      name="Project"
                      action="real_estate_project_action"/>
        </menuitem>

        <!-- Buildings Submenu -->
        <menuitem id="real_estate_buildings_menu"
                  name="Building">
            <menuitem id="real_estate_building_list_menu"
                      name="Building"
                      action="real_estate_building_action"/>
        </menuitem>

        <!-- Properties Submenu -->
        <menuitem id="real_estate_properties_menu"
                  name="Property">
            <menuitem id="real_estate_property_list_menu"
                      name="Property"
                      action="real_estate_property_action"/>
        </menuitem>
        <menuitem id="menu_real_estate_config"
            name="Configuration"
            sequence="50">
            <menuitem id="menu_property_config"
                sequence="30"
                name="Property">
                <menuitem id="menu_real_estate_property_statuses_config"
                          name="Property Status"
                          action="real_estate_property_status_action"/>
                <menuitem id="menu_real_estate_pricebook_config"
                          name="Pricebook"
                          action="real_estate_pricebook_action"/>
            </menuitem>

        </menuitem>
    </menuitem>

</odoo>
